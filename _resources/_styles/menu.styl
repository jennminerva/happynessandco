.FoodMenuContainer p {
	margin: 2rem 0 0 0;
}
@media laptop {
	.FoodMenuContainer .ContentContainer {
		float: left;
		position: relative;
		top: 3rem;
		margin: 10rem 6rem;
	}
}
.FoodMenu {
	margin: 2.5rem 0;
}
.FoodMenuPricing {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	list-style-type: none;
	font-size: 1.5rem;
	margin: 4rem 0;
	padding: 0;
	line-height: 175%;
}
@media tablet {
	.FoodMenuPricing {
		margin: 4rem 15rem;
	}
}
@media laptop {
	.FoodMenuPricing {
		margin: 4rem 0;
	}
}
.FoodMenuPricing li{
	width: 50%;
}
.FoodMenuList {
	margin: 4rem 5rem;
	clear: both;
	overflow: auto;
}
@media tablet {
	.FoodMenuList {
		margin: 9rem 11rem;
		}
}
@media laptop {
	.FoodMenuList {
		clear: none;
		display: flex;
		flex-wrap: wrap;
		position: relative;
		top: 8rem;
	}
}
.FoodMenuList dt {
	font-size: 1.5rem;
	margin: 1rem;
	color: #ff3431;
}
.FoodMenuList dd {
	margin: 0 0 4rem 3rem;
	line-height: 150%;
}
@media laptop {
	.FoodMenuListItem {
		width: 50%;
		padding: 0 6rem;
	}
}
.FoodMenuHeading {
	margin: 0 0 0 4rem;
	clear: both;
}
@media laptop {
	.FoodMenuHeading {
		clear: none;
	}
}

// The "FullWidth" portion of the following class names refers to the full screen width food menu at the laptop breakpoint

@media laptop {
	.First {
		position: relative;
		top: 13rem;
	}
	.HeadingSmall.FullWidth {
		margin: 10rem 6rem 6rem 6rem;
	}
	.FoodMenuList.FullWidth {
		margin: 0 3rem;
		top: 0;
	}
	.FoodMenuListItem.FullWidth {
		width: 33%;
	}
}
.BtnRequestContainer {
	margin: 0 auto;
	width: 196px;
}
.BtnRequest {
	margin: 2rem 0;
}