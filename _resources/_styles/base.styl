html {
  min-height: 100%;
}
* {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  box-sizing: border-box;
}
body {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0;
  padding-bottom: 10vw;
  background: #ffe3e2;
}
.hidden {
  display: none;
  opacity: 0;
}
img {
  max-width: 100%;
}
p {
  font-size: 1.5rem
}
.PinkBackground {
  background: #ffe3e2;
  padding: 0;
  margin: 0;
}
#Welcome {
  // margin: 0 0 4rem 0;
  // background: #ffe3e2;
  color: #ff3431;
  overflow: auto;
}
.ContentContainer {
  border: 1px solid #ff3431;
  margin: 2.5rem;
  padding: 3rem 3rem 4rem 3rem;
  background: #ffe3e2
  position: relative;
}
.HeadingLarge {
  width: 75%;
}
.Greeting {
  margin: 5rem 0 0 0;
  line-height: 175%;
}
button {
  background: transparent;
  border: 1px solid #ff3431;
  border-radius: 75px;
  color: #ff3431;
  height: 4rem;
  font-size: 1.3rem;
  letter-spacing: 2px;
  padding: 1rem 3rem;
  text-transform: uppercase;
  font-family: 'CircularStdBook', sans-serif;
}
.BtnRequest {
  margin: 5rem 0 0 0;
}
.Instagram {
  margin: 6rem 0 0 0; 
}
.Instagram p {
  display: inline;
  margin: 0 0 0 .5rem;
}
.Instagram img {
  position: relative;
  top: 6px;
}
.ContentContainer:after {
  content: '';
  position: absolute;
  top: 5px;
  left: 5px;
  right: -7px;
  bottom: -7px;
  border: 1px solid #ff3431;
  z-index: -1;
}

// Gallery

.Gallery {
  margin: 6rem 0;
}
.GalleryImg {
  max-width: 80%;
  margin: 2.5rem 0;
  -webkit-box-shadow: 10px 10px 0px 0px rgba(218,123,122,0.1);
  -moz-box-shadow: 10px 10px 0px 0px rgba(218,123,122,0.1);
  box-shadow: 10px 10px 0px 0px rgba(218,123,122,0.1);
}
.ImgRight {
  float: right;
}


