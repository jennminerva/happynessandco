html {
  min-height: 100%;
}
* {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  box-sizing: border-box;
}
body {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0;
  padding-bottom: 10vw;
  background: #FFE3E2;
  color: #FE6D6A;
}
.hidden {
  display: none;
  opacity: 0;
}
img {
  max-width: 100%;
}
p {
  color: #FE6D6A;
}
.ContentContainer {
  border: 1px solid #FE6D6A;
  margin: 2.3rem;
}
.Logo {
  margin: 4rem 3rem;
  width: 60%;
}
.Greeting {
  margin: 1rem 3rem;
  font-size: 1.3rem;
  line-height: 175%;
}
button {
  background: transparent;
  border: 1px solid #FE6D6A;
  border-radius: 75px;
  color: #FE6D6A;
  font-size: 1.3rem;
  letter-spacing: 2px;
  margin: 4rem 3rem;
  padding: 1rem 2rem;
}
