html {
  min-height: 100%;
}
* {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  box-sizing: border-box;
}
body {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0;
  padding-bottom: 10vw;
  background: #ffe3e2;
  color: #ff3431;
}
.hidden {
  display: none;
  opacity: 0;
}
img {
  max-width: 100%;
}
p {
  color: #ff3431;
  font-size: 1.4rem
}
.ContentContainer {
  border: 1px solid #ff3431;
  margin: 2.3rem;
  padding: 5rem 3rem;
  background: #ffe3e2
  z-index: 999;
}
.Logo {
  width: 75%;
}
.Greeting {
  margin: 5rem 0 0 0;
  line-height: 175%;
}
button {
  background: transparent;
  border: 1px solid #ff3431;
  border-radius: 75px;
  color: #ff3431;
  height: 4rem;
  font-size: 1.3rem;
  letter-spacing: 2px;
  padding: 1rem 3rem;
  text-transform: uppercase;
}
.BtnRequest {
  margin: 5rem 0 0 0;
}
.Instagram {
  margin: 7rem 0 0 0; 
}
.Instagram p {
  display: inline;
  margin: 0 0 0 1rem;
}
.Instagram img {
  position: relative;
  top: 6px;
}
// I think there is a better way to do what follows, but idk what that better way is
.ContentContainerShadow {
  position: absolute;
  border: 1px solid #ff3431;
  top: 2.8rem;
  right: 1.8rem;
  height: 54.8rem;
  width: 33rem;
  z-index: -999;
}