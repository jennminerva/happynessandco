html {
  min-height: 100%;
}
* {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  box-sizing: border-box;
}
body {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0;
  padding-bottom: 10vw;
  background: #ffe3e2;
  color: #ff3431;
}
.hidden {
  display: none;
  opacity: 0;
}
img {
  max-width: 100%;
}
p {
  color: #ff3431;
  font-size: 1.4rem
}
.ContentContainer {
  border: 1px solid #ff3431;
  margin: 2.3rem;
  padding: 4rem 3rem;
}
.Logo {
  width: 75%;
}
.Greeting {
  margin: 1rem 0;
  line-height: 175%;
}
button {
  background: transparent;
  border: 1px solid #ff3431;
  border-radius: 75px;
  color: #ff3431;
  font-size: 1.3rem;
  letter-spacing: 2px;
  margin: 4rem 0;
  padding: 1rem 2rem;
  text-transform: uppercase;
}
